@model MikeRosoft.Models.OrderViewModels.OrderDetailsForBuyViewModel


@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstSurname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstSurname)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Order.arrivalDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Order.arrivalDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Order.deliveryAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Order.deliveryAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Order.ProductOrders.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Order.ProductOrders.ElementAt<ProductOrder>(i).products.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Order.ProductOrders.ElementAt<ProductOrder>(i).products.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Order.ProductOrders.ElementAt<ProductOrder>(i).quantity)
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>
