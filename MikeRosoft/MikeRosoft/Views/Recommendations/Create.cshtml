@model MikeRosoft.Models.RecommendationViewModels.RecommendationCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-action="Create" method="post">

    <div class="form-horizontal">
        <h4>Recommendation</h4>
        <hr />
        <p>Recomendation title</p>
        <input id="recomText" type="text" name="NameRec"/>

        <p>Description</p>
        <input id="recomDesc" type="text" name="Description"/>
        <hr />



        <!--Datos del administrador que crea la recomendacion-->
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstSurname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SecondSurname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SecondSurname)
            </dd>
        </dl>
        



        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Rate
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ProductRecommendations.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelProduct => Model.ProductRecommendations.ElementAt<ProductRecommend>(i).Product.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelProduct => Model.ProductRecommendations.ElementAt<ProductRecommend>(i).Product.precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelProduct => Model.ProductRecommendations.ElementAt<ProductRecommend>(i).Product.rate)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="hidden" name="prod" class="form-control" value="@Model.ProductRecommendations[i].Product.id" />
                        </td>
                        
                    </tr>
                    
                }
            </tbody>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="CreateButton" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
