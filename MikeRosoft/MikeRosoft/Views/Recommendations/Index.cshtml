@model IEnumerable<MikeRosoft.Models.Recommendation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a id="SelectProductsForRecommendation" asp-action="SelectProductsForRecommendation">Create New</a>
</p>
<table class="table">
    <!--Datos sobre las recomendaciones-->
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameRec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Select Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameRec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRecommendation">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRecommendation">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRecommendation">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
